input:not([type=checkbox])
input:not([type=radio])
  padding 3px 5px
  border 1px solid #000000;
  font-size 16px
  border-radius 3px
  box-sizing border-box

  &.unit-invalid
  &.relation-invalid
    padding 1px 3px
    background #fdd
    border 3px solid #f00

input[type=text]
input[type=url]
input[type=tel]
input[type=email]
  padding 3px 5px
  border 1px solid #000000;
  font-size 16px
  border-radius 3px
  box-sizing border-box

  &.unit-invalid
  &.relation-invalid
    padding 1px 3px
    background #fdd
    border 3px solid #f00

textarea
  padding 3px 5px
  border 1px solid #000000;
  font-size 16px
  border-radius 3px
  box-sizing border-box

  &.unit-invalid
  &.relation-invalid
    padding 1px 3px
    background #fdd
    border 3px solid #f00

select
  box-sizing border-box
  font-size 16px

  &.unit-invalid
  &.relation-invalid
    background #fdd
    border 3px solid #f00

.credit-icon
  position absolute
  display none
  vertical-align top
  top 0

  &.active
    display inline-block

  &.jcb
    background-image url('data:image/png;base64,')
    width 57px
    height 44px

  &.master
    background-image url('data:image/png;base64,')
    width 70px
    height 44px

  &.visa
    background-image url('data:image/png;base64,')
    width 70px
    height 44px

.email-valid
  position relative

  &:after
    content ""
    position absolute
    top 10px
    right 10px
    width 16px
    height 16px
    background-image url('../img/check.png')
    background-repeat no-repeat
    background-size 16px 16px
    color #33dd33

.unit-efo-error-message
  margin-top 4px
  color #ff0000

.relation-efo-error-message
  margin-top 4px
  color #ff0000

.error-messages
    display none
    margin-bottom 20px
    padding 8px
    background #fbffc2
    border 1px solid #888888
    border-radius 3px
    color #ff0000
    font-weight bold

.error-messages > li
    text-indent -1em
    margin-left 1em 
    margin-bottom 10px
    cursor pointer

.error-messages > li:last-child
    margin-bottom 0

.error-messages > li:before
    content "ãƒ»"

.error-messages a
    color inherit
    text-decoration none

@media screen and (max-width: 420px)
  .efo-error-message
    display none

  .error-messages.active
    display block

  .credit-icon
    &.jcb
      background-size 28.5px 22px
      width 28.5px
      height 22px

    &.master
      background-size 35px 22px
      width 35px
      height 22px

    &.visa
      width 35px
      height 22px
      background-size 35px 22px

  .email-valid
    &:after
      background-image url('../img/check@2x.png')