.input-table
    input:not([type=checkbox]):not([type=radio])
        height 38px
        box-shadow inset 0 0 4px rgba(0, 0, 0, 0.2)

    input[type=text]
    input[type=url]
    input[type=tel]
    input[type=email]
        height 38px
        box-shadow inset 0 0 4px rgba(0, 0, 0, 0.2)

    textarea
        height 38px
        box-shadow inset 0 0 4px rgba(0, 0, 0, 0.2)

    input
        &[type=text]
            width 180px

        &[type=tel], &.numeric
            width 110px

        &.zip1
            width 100px

        &.short
            width 110px

        &.normal
            width 180px

        &.semi-long
            width 240px

        &.long
            width 300px

        &[type=submit]
            cursor pointer

    .input-row
        min-width 800px
        margin-bottom 10px

        &.required
            > dt
                &:before 
                    content "required"
                    font-size 12px
                    margin-right 10px

        > dt
            display inline-block
            vertical-align middle
            width 230px
            margin-right 20px
            text-align right
            font-size 20px
        > dd
            display inline-block
            vertical-align middle

        .card-image
            position relative
            display inline-block
            vertical-align top
            margin-left 10px
    
    .input-logo
        width 925px


    .normal
        display block

    input[type=radio]
        display none
        .lt-ie9 &
            display block
            position absolute
            top -20px
            width 0
            height 0

    .radio-button
        position relative
        overflow hidden
        display inline-block
        vertical-align bottom
        height 20px
        width 20px
        background #fff
        border 1px solid #ccc
        border-radius 10px

        &.checked
            &:before
                content ''
                position absolute
                display inline-block
                vertical-align bottom
                top 5px
                left 5px
                height 10px
                width 10px
                border-radius 5px
                background #33dd33

        &.unit-invalid
            background #ffdddd
            border-color #ff0000

    input[type=checkbox]
        display none
        .lt-ie9 &
            display block
            position absolute
            top -20px
            width 0
            height 0

    .checkbox-button
        position relative
        overflow hidden
        display inline-block
        vertical-align bottom
        height 20px
        width 20px
        background #fff
        border 1px solid #ccc

        &.checked
            background-image url('../img/check.png')
            background-position center center
            background-repeat no-repeat

        &.unit-invalid
            background #ffdddd
            border-color #ff0000

    @media screen and (max-width: 420px)
        input
            width 100%

            &[type=text], &[type=password]
                width 100%

            &[type=tel]
                width 65px

            &.numeric
                width 65px

            &.short
                width 65px
            
            &.normal, &.semi-long, &.long
                width 100%

        .input-row
            min-width inherit

            > dt
                display block
                width 100%
                margin 0
                text-align left
                font-size 20px
            > dd
                position relative
                display block

                .card-image
                    position absolute
                    display block
                    margin 10px
                    top 30px
                    right 0

        .input-logo
            width auto

.operation
    text-align center
    margin 40px auto